{
    "name": "PGXN Manager",
    "dbi": {
        "dsn": "dbi:Pg:dbname=pgxn_manager",
        "username": "pgxn",
        "password": ""
    },
    "middleware": [
        ["ErrorDocument", 500, "/error", "subrequest", 1],
        ["HTTPExceptions"],
        ["StackTrace", "no_print_errors", 1]
    ],
    "mirror_root": "/var/www/master.pgxn.org",
    "mirror_uri": "http://master.pgxn.org",
    "admin_email": "PGXN Admins <pgxn@pgexperts.com>",
    "alert_email": "PGXN Admins <pgxn-admins@googlegroups.com>",
    "uri_templates": {
        "download":  "/dist/{dist}/{version}/{dist}-{version}.pgz",
        "readme":    "/dist/{dist}/{version}/README.txt",
        "meta":      "/dist/{dist}/{version}/META.json",
        "dist":      "/dist/{dist}.json",
        "extension": "/extension/{extension}.json",
        "user":      "/user/{user}.json",
        "tag":       "/tag/{tag}.json",
        "stats":     "/stats/{stats}.json",
        "mirrors":   "/meta/mirrors.json",
        "spec":      "/meta/spec.{format}"
    },
    "twitter": {
        "consumer_key": "",
        "consumer_secret": "",
        "access_token": "",
        "access_token_secret": ""
    }
}
